extends: default

yaml-files:
  - '*.yaml'
  - '*.yml'
  - '.yamllint'

ignore: .gitignore

rules:
  line-length:
    level: warning
    max: 99
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true

  empty-lines:
    max: 1
    max-start: 0
    max-end: 0

  document-start:
    present: false

  quoted-strings:
    required: false
